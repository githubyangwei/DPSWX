.lineViews {
  color: #332e26;
}
.lineViews .lineConts .lineTitles {
  height: 105rpx;
  padding: 30rpx 0 10rpx 22rpx;
}
.lineViews .lineConts .lineTitles .titleText {
  height: 65rpx;
  line-height: 65rpx;
  width: 125rpx;
  text-align: center;
  background: #b39e55;
  float: left;
  font-size: 26rpx;
  color: #323333;
  margin-right: 21rpx;
}
.lineViews .lineConts .lineTitles .titleText:last-child {
  margin-right: 0;
}
.lineViews .viewLines {
  margin: 0 22rpx 22rpx;
  display: table;
}
.lineViews .viewLines .table {
  border: 0px solid darkgray;
}
.lineViews .viewLines .tr {
  display: flex;
  width: 100%;
  justify-content: left;
  align-items: top;
}
.lineViews .viewLines .td {
  justify-content: center;
  text-align: center;
  position: relative;
}
.lineViews .viewLines .td text {
  width: 141rpx;
  height: 65rpx;
  line-height: 65rpx;
  display: block;
  color: #332e26;
  font-size: 30rpx;
}
.lineViews .viewLines .td .lineBehind {
  position: absolute;
  left: 0;
  top: 32.5rpx;
  width: 1rpx;
  background: #e81f18;
  height: 100%;
}
.lineViews .viewLines .td .lineafter {
  position: absolute;
  top: 32.5rpx;
  right: 0;
  height: 1rpx;
  background: #e81f18;
  width: 22rpx;
}
.lineViews .viewLines .td .lineThisNode {
  position: absolute;
  top: 32.5rpx;
  left: 0;
  height: 1rpx;
  background: #e81f18;
  width: 22rpx;
}
.lineViews .viewLines .td .linethisEnd {
  position: absolute;
  top: 41rpx;
  left: -1rpx;
  transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  -moz-transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  -o-transform: rotate(45deg);
  height: 1rpx;
  background: #e81f18;
  width: 22rpx;
}
.lineViews .viewLines .td .lineCircle {
  width: 8rpx;
  height: 8rpx;
  position: absolute;
  left: 21rpx;
  border: 1rpx solid #e81f18;
  border-radius: 8rpx;
  top: 30rpx;
}
.lineViews .viewLines .td .tsAts {
  position: absolute;
  width: 26rpx;
  height: 26rpx;
}
.lineViews .viewLines .td .tsAts .wxIcon {
  font-size: 36rpx;
  color: #709193;
}
.lineViews .viewLines .td .turnTobfs {
  top: 12rpx;
  left: 15rpx;
}
.lineViews .viewLines .td .turnToaft {
  top: 12rpx;
  right: 15rpx;
}
.lineViews .pageView {
  position: fixed;
  height: 120rox;
  line-height: 120rpx;
  padding: 0 55rpx;
  bottom: -130rpx;
  width: 100%;
  background: #fff;
  left: 0;
  font-size: 30rpx;
  transition: bottom 0.5s;
  -moz-transition: bottom 0.5s;
  -webkit-transition: bottom 0.5s;
  -o-transition: bottom 0.5s;
}
.lineViews .pageView .cUp {
  float: left;
}
.lineViews .pageView .cMenu {
  position: absolute;
  left: 359rpx;
}
.lineViews .pageView .cDown {
  float: right;
}
.lineViews .pageView.active {
  bottom: 0;
}
