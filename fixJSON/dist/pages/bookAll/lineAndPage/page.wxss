.pageViews {
  background: #d8cca7;
  width: 100%;
  min-height: 100%;
  color: #332e26;
  font-size: 36rpx;
}
.pageViews .showView {
  min-height: 100%;
  margin: 0 40rpx;
  overflow-x: hidden;
}
.pageViews .showView rich-text p {
  color: #332e26;
  font-size: 36rpx;
}
.pageViews .showView rich-text img {
  display: block;
  width: 100%;
}
.pageViews .pageView {
  position: fixed;
  height: 120rox;
  line-height: 120rpx;
  padding: 0 55rpx;
  bottom: -130rpx;
  width: 100%;
  background: #fff;
  left: 0;
  font-size: 30rpx;
  transition: bottom 0.5s;
  -moz-transition: bottom 0.5s;
  -webkit-transition: bottom 0.5s;
  -o-transition: bottom 0.5s;
}
.pageViews .pageView .cUp {
  float: left;
}
.pageViews .pageView .cMenu {
  position: absolute;
  left: 359rpx;
}
.pageViews .pageView .cDown {
  float: right;
}
.pageViews .pageView.active {
  bottom: 0;
}
