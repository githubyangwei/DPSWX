.bookmenuTips {
  height: 100rpx;
  line-height: 100rpx;
  background: #f5f5f5;
  color: #666666;
  font-size: 24rpx;
  padding: 0 25rpx 0;
}
.showMenusCont {
  background: #fff;
  padding: 0 25rpx 25rpx;
}
.showMenusCont .menuTitle {
  font-size: 34rpx;
  color: #333;
}
.showMenusCont .menuTitle image {
  width: 40rpx;
  height: 30rpx;
  display: inline-block;
  margin-right: 2rpx;
  position: relative;
  top: 4rpx;
}
.showMenusCont .menuAline {
  border-bottom: 1rpx solid #d7c9c4;
  height: 102rpx;
  line-height: 102rpx;
  position: relative;
}
.showMenusCont .menuAline .menLocked {
  width: 27rpx;
  height: 34rpx;
  position: absolute;
  top: 2rpx;
  right: 12rpx;
}
.showMenusCont .menuAline:last-child {
  border: none;
  margin-bottom: 10rpx;
}
.showMenusCont .MenuLv1 {
  font-size: 32rpx;
  color: #333;
}
.showMenusCont .MenuLv2,
.showMenusCont .MenuLv3 {
  color: #4c4c4c;
  font-size: 28rpx;
}
.showMenusCont .MenuLv3 {
  padding-left: 30rpx;
}
