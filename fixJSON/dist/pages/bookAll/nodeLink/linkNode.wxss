page {
  background: #f7f7f7;
}
.topDetail {
  height: 316rpx;
  background: #ff7b52;
  position: relative;
  margin-bottom: 78rpx;
}
.topDetail .DetailConts {
  position: absolute;
  top: 38rpx;
  width: 670rpx;
  height: 357rpx;
  background: #fff;
  left: 40rpx;
  padding-top: 96rpx;
}
.topDetail .DetailConts .userImgs {
  width: 102rpx;
  height: 102rpx;
  position: absolute;
  left: 274rpx;
  top: -28rpx;
}
.topDetail .DetailConts .userImgs .wxIcon {
  font-size: 40rpx;
  position: absolute;
  bottom: -20rpx;
  right: -20rpx;
  background: #fff;
  border-radius: 20rpx;
  width: 40rpx;
  line-height: 40rpx;
  height: 40rpx;
}
.topDetail .DetailConts .userImgs .wxIcon.men {
  color: #4c99a7;
}
.topDetail .DetailConts .userImgs .wxIcon.women {
  color: #a74c4c;
}
.topDetail .DetailConts .userImgs .wxIcon.die {
  color: #999;
}
.topDetail .DetailConts .detailName {
  text-align: center;
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
}
.topDetail .DetailConts .detailName .lifeOr {
  display: none;
  width: 30rpx;
  height: 30rpx;
  background: #000;
  font-weight: normal;
  color: #fff;
  font-size: 20rpx;
  position: relative;
  top: -3rpx;
}
.topDetail .DetailConts .detailName .lifeOr.die {
  display: inline-block;
}
.topDetail .DetailConts .moerInfo {
  margin-top: 20rpx;
}
.topDetail .DetailConts .moerInfo .infoDs {
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333333;
  font-size: 24rpx;
}
.topDetail .DetailConts .moerInfo .infoDs span {
  color: #ff6200;
  font-size: 24rpx;
  margin-right: 15rpx;
}
.topDetail .DetailConts .dxTurn {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #fff;
  background: #ff7b52;
  border-radius: 4rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  padding: 0 10rpx;
  display: none;
}
.topDetail .DetailConts .dxTurn.active {
  display: block;
}
.questionConts {
  height: 656rpx;
  margin: 120rpx 24rpx 20rpx;
  background: #ff7b52;
  border-radius: 24rpx;
}
.questionConts .qTitles {
  padding-left: 23rpx;
  font-size: 42rpx;
  color: #fff;
  height: 100rpx;
  line-height: 120rpx;
}
.questionConts .qConts {
  width: 654rpx;
  height: 508rpx;
  margin: 0 24rpx;
  position: relative;
}
.questionConts .qConts .ansNodes {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.lodingLine {
  width: 647rpx;
