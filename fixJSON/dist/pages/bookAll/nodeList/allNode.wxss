.nodeCont {
  background: #fff;
  height: 196rpx;
  margin-bottom: 1px;
  position: relative;
  color: #333333;
}
.nodeCont .lifeOr {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  background: #000;
  font-weight: normal;
  color: #fff;
  font-size: 20rpx;
  position: relative;
  top: -3rpx;
  line-height: 30rpx;
  text-align: center;
  margin-left: 15rpx;
}
.nodeCont .menLocked {
  color: #808080;
  font-size: 22px;
  margin-left: 25rpx;
  position: absolute;
  right: 18rpx;
  top: 2rpx;
}
.nodeCont .ImgConts {
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  position: absolute;
  top: 60rpx;
  left: 25rpx;
  border: 1px solid #f5f5f5;
  border-radius: 2rpx;
}
.nodeCont .ImgConts image {
  width: 80rpx;
  height: 112rpx;
  position: absolute;
  top: -16rpx;
}
.nodeCont .ImgConts .nodeTxtImg {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}
.nodeCont .nodeDetail {
  padding: 32rpx 0 0 150rpx;
}
.nodeCont .nodeDetail .line1,
.nodeCont .nodeDetail .line2,
.nodeCont .nodeDetail .line3 {
  height: 50rpx;
  line-height: 50rpx;
  position: relative;
  color: #4c4c4c;
}
.nodeCont .nodeDetail .line1 {
  color: #232323;
  font-size: 32rpx;
}
.nodeCont .nodeDetail .line1 .wxIcon {
  margin-left: 20rpx;
  font-size: 36rpx;
}
.nodeCont .nodeDetail .line1 .wxIcon.men {
  color: #4c99a7;
}
.nodeCont .nodeDetail .line1 .wxIcon.women {
  color: #a74c4c;
}
.nodeCont .nodeDetail .line1 .wxIcon.die {
  color: #999;
}
.nodeCont .nodeDetail .line1 .nodeRelativeUser {
  display: inline-block;
  width: 54rpx;
  height: 33rpx;
  font-size: 18rpx;
  color: #fff;
  background: #ff7b52;
  line-height: 33rpx;
  text-align: center;
  margin-left: 20rpx;
  border-radius: 5rpx;
  position: relative;
  top: -5rpx;
}
.nodeCont .nodeDetail .line1 .nodeParent {
  position: absolute;
  height: 50rpx;
  vertical-align: bottom;
  top: 0;
  right: 20rpx;
  color: #333333;
  font-size: 24rpx;
}
.nodeCont .nodeDetail .line2 {
  padding-right: 20px;
}
.nodeCont .nodeDetail .line2 text {
  display: block;
  width: 530rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.nodeCont .nodeDetail .line3 .nodeSort {
  position: absolute;
  left: 250rpx;
}
.nodeCont .nodeDetail .line3 .nodeLink {
  position: absolute;
  right: 20rpx;
  top: 0;
}
.nodeCont .nodeDetail .line3 .nodeLink .wxIcon {
  margin-right: 5rpx;
}
.userConts {
  width: 100%;
  min-height: 100%;
  background: #f5f5f5;
}
.userConts .userTopCont {
  height: 200rpx;
}
.userConts .userTopCont .topTables {
  height: 86rpx;
  text-align: center;
  background: #fff;
}
.userConts .userTopCont .topTables .topTxt {
  width: 210rpx;
  height: 86rpx;
  display: inline-block;
  color: #808080;
  font-size: 30rpx;
  position: relative;
}
.userConts .userTopCont .topTables .topTxt.active {
  color: #333333;
  font-weight: bold;
}
.userConts .userTopCont .topTables .topTxt.active:after {
  content: " ";
  display: block;
  width: 52rpx;
  height: 8rpx;
  background: #ff7043;
  border-radius: 4rpx;
  position: absolute;
  bottom: 0;
  left: 81rpx;
}
.userConts .userTopCont .listSearch {
  height: 120rpx;
  padding: 26rpx 32rpx;
  position: relative;
  z-index: 1;
  background: #f5f5f5;
}
.userConts .userTopCont .listSearch input {
  background: #fafafa;
  font-size: 30rpx;
  padding-left: 74rpx;
  height: 70rpx;
  border-radius: 3rpx;
}
.userConts .userTopCont .listSearch icon {
  position: absolute;
  top: 42rpx;
  z-index: 15;
  left: 46rpx;
}
.userConts .showNodeCont .showNodes {
  display: none;
}
.userConts .showNodeCont .showNodes.active {
  display: block;
}
