.bookDetailConts {
  background: #f5f5f5;
  width: 100%;
  min-height: 100%;
}
.bookshow {
  height: 256rpx;
  background: #e5dcca;
  position: relative;
}
.bookshow .bookFont {
  position: absolute;
  width: 161rpx;
  height: 216rpx;
  left: 38rpx;
  top: 11rpx;
}
.bookshow .bookTextCont {
  padding-left: 224rpx;
  padding-top: 11rpx;
  color: #333333;
  font-size: 26rpx;
  line-height: 52rpx;
}
.bookshow .bookTextCont .bookTitles {
  font-size: 30rpx;
  line-height: 60rpx;
  font-weight: bold;
  position: relative;
}
.bookshow .bookTextCont .bookTitles .bookQrCode {
  width: 32rpx;
  height: 32rpx;
  display: inline-block;
  position: relative;
  top: 2rpx;
  left: 26rpx;
  z-index: 12;
}
.userline {
  height: 110rpx;
  background: #fff;
  position: relative;
  margin-bottom: 24rpx;
}
.userline .userPhoto {
  width: 68rpx;
  height: 68rpx;
  border-radius: 35rpx;
  overflow: hidden;
  float: left;
  margin-right: 16rpx;
}
.userline .openMore {
  position: relative;
  right: 24rpx;
  color: #666666;
}
.userline .navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.userline .navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-top: 1rpx solid #d8d8d8;
  color: #666666;
}
.userline .navigator:first-child:before {
  display: none;
}
.userline .navigator-text {
  flex: 1;
}
.userline .navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.userline .navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}
.userAndBookAll {
  height: 102rpx;
  background: #fff;
  text-align: center;
  overflow: hidden;
}
.userAndBookAll .ui-col-content {
  height: 121rpx;
  display: inline-block;
  font-size: 34rpx;
}
.userAndBookAll .ui-col-content .wxIcon {
  height: 30rpx;
  display: inline-block;
  position: relative;
  top: 2rpx;
  padding-right: 15rpx;
}
.userAndBookAll .ui-col-content text {
  display: inline;
  line-height: 130rpx;
  font-size: 20rpx;
  position: relative;
  left: -10rpx;
}
.bookDetailBox {
  height: 100rpx;
  border-top: 1rpx solid #e5e5e5;
  background: #fff;
}
.bookDetailBox .bookBtns {
  text-align: center;
  height: 72rpx;
  margin: 7px 10px 0;
  line-height: 72rpx;
  font-size: 36rpx;
  border-radius: 10rpx;
}
.bookDetailBox .addCollect {
  color: #ff7b52;
  background: #ffffff;
  border: 1rpx solid #ff7b52;
}
.bookDetailBox .readNow {
  color: #ffffff;
  background: #ff7b52;
}
.showMenusCont {
  background: #fff;
  padding: 0 24rpx 101rpx;
}
.showMenusCont .menuTitle {
  font-size: 34rpx;
  color: #333;
}
.showMenusCont .menuTitle image {
  width: 40rpx;
  height: 30rpx;
  display: inline-block;
  margin-right: 2rpx;
  position: relative;
  top: 4rpx;
}
.showMenusCont .menuAline {
  border-bottom: 1rpx solid #d7c9c4;
  height: 102rpx;
  line-height: 102rpx;
  position: relative;
}
.showMenusCont .menuAline .menLocked {
  width: 27rpx;
  height: 34rpx;
  position: relative;
  right: 3rpx;
}
.showMenusCont .menuAline:last-child {
  border: none;
  margin-bottom: 10rpx;
}
.showMenusCont .MenuLv1 {
  font-size: 32rpx;
  color: #333;
}
.showMenusCont .MenuLv2,
.showMenusCont .MenuLv3 {
  color: #4c4c4c;
  font-size: 28rpx;
}
.showMenusCont .MenuLv3 {
  padding-left: 30rpx;
}
.showMenusCont .navigator {
  position: relative;
  display: flex;
  align-items: center;
  vertical-align: middle;
}
.showMenusCont .navigator-text {
  flex: 1;
  line-height: 35rpx;
}
.showMenusCont .navigator-arrow {
  padding-right: 45rpx;
  position: relative;
}
.showMenusCont .navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}
.nores.navigator-arrow:after {
  display: none;
}
